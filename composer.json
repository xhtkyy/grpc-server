{
    "name": "xhtkyy/grpc-server",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "grpc",
        "server"
    ],
    "description": "Grpc Server Extends",
    "autoload": {
        "psr-4": {
            "Xhtkyy\\GrpcServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "amphp/hpack": "^3.2",
        "hyperf/di": "3.0.*",
        "hyperf/framework": "^3.0",
        "hyperf/grpc-server": "^3.0",
        "hyperf/service-governance": "^3.0",
        "opentracing/opentracing": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Xhtkyy\\GrpcServer\\ConfigProvider"
        }
    }
}
